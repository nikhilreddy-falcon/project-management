{
  "name": "project-tracker",
  "version": "1.0.0",
  "description": "Project lifecycle tracking application",
  "scripts": {
    "server": "node server/index.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-all": "npm install && cd client && npm install",
    "start:backend": "PORT=3051 node server/index.js",
    "start:frontend": "cd client && PORT=3050 npm start",
    "deploy": "concurrently \"npm run start:backend\" \"npm run start:frontend\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "concurrently": "^8.2.2"
  }
}
